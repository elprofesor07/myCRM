# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crm-database
MONGODB_OPTIONS_AUTO_INDEX=true

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_EMAIL_VERIFICATION_SECRET=your-email-verification-secret-key
JWT_EMAIL_VERIFICATION_EXPIRE=24h

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourcrm.com
EMAIL_FROM_NAME=YourCRM

# Frontend URL
CLIENT_URL=http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100